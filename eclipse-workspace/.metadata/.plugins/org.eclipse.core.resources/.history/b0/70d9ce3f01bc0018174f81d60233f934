<%
int r=7;
int c=7;
int i;
java.util.Calendar cal=java.util.Calendar.getInstance(); 
int count=cal.getActualMaximum(Calendar.DAY_OF_MONTH);
int year=cal.get(java.util.Calendar.YEAR);
int month=cal.get(java.util.Calendar.MONTH)+1;
int date=cal.get(java.util.Calendar.DATE);
String today=year+"-"+month+"-"+date;
out.write("<TABLE>");
out.write("<TD><Th>일</Th></TD>");
out.write("<TD><Th>월</Th></TD>");
out.write("<TD><Th>화</Th></TD>");
out.write("<TD><Th>수</Th></TD>");
out.write("<TD><Th>목</Th></TD>");
out.write("<TD><Th>금</Th></TD>");
out.write("<TD><Th>토</Th></TD>");
r=r-1;
Boolean p=true;
int start=0;
while(start!=count){
for(i=0;i<r;i++){
	out.write("<TR>");
	for(int j=0;j<c;j++,c=7){
		start+=1;
		out.write("<TD>");
		if(p==true){
		for(int k=0;k<cal.getMinimalDaysInFirstWeek();k++){
			out.write("<Th> </Th>");
			c--;
			p=false;
		}
		
		}
		out.write("<Th>");
		out.print(start);
		out.write("</Th>");
		out.write("</TD>");
		
	}
	out.write("</TR>");

	}
}
out.write("</TABLE>");


%>

</body>
