out.write("<TD><Th>목</Th></TD>");
out.write("<TD><Th>금</Th></TD>");
out.write("<TD><Th>토</Th></TD>");
r=r-1;
Boolean p=true;
int start=0;

loop1 :for(i=0;i<r;i++){
	
	out.write("<TR>");
	for(int j=0;j<c;j++){
		if(start==count)
			break loop1;
		start+=1;
		out.write("<TD>");
		if(p==true){
		for(int k=1;k<Calendar.DAY_OF_WEEK;k++){
			out.write("<Th></Th>");out.write("<Th></Th>");
			j++;
			p=false;
			}
		
		
		}
		out.write("<Th>");
		out.print(start);
		out.write("</Th>");
		out.write("</TD>");
		
	}
	out.write("</TR>");

}

out.write("</TABLE>");

